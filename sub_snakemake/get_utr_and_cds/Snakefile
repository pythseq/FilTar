rule get_utr_lengths:
        input:  'results/bed/{species}_{tissue}_3UTR.chr{chrom}.bed'
        output: 'results/utrs/{species}_{tissue}_chr{chrom}.utr.lengths.tsv'
        script: 'get_utr_lengths.R'
